{% extends 'base.html.twig' %}

{% block title %}Recyclatroc - Utilisateur
{% endblock %}

{% block body %}
	<main class="global-container">
		<div class="card-header">

			<h1 class="breadcrumb">Profil de
				{{ user.username }}</h1>
		</div>
		<div
			class="card-body">

			{# cards #}
			<div class="user-container">
				<div class="leftUser">
					{% if user.avatar %}
						<img src="{{ asset(user.avatar) }}" height="200">
					{% else %}
						<img class="productPictureSolo" src="{{asset('images/consciousness.png')}}">
					{% endif %}
				</div>
				<div class="rigthUser">
					<ul class="list-group list-group-flush">
						<li class="list-group-item">Pseudonyme:
							{{ user.username }}</li>
						<li class="product-text list-group-item">Email:
							<strong>{{ user.email }}</strong>
						</li>
						<li class="list-group-item">Présentation:
							{{ user.presentation|default('non renseigné') }}</li>

						<li class="list-group-item">Téléphone:
							{{ user.phone|default('non renseigné') }}</li>
					</li>
					<li class="list-group-item">Lieu (x):
						{% for product in user.products %}
						{{ location.city }}
						{% endfor %}
					</li>
				</li>
				<div class="card-footer text-muted">
					Inscrit(e) depuis le :
					{{ user.createdAt|date('d M yy ') }}
				</div>

			</td>
		</li>

		{% if app.user == user.username %}
			<div class="button-container">
				<button class="btn btn-outline-primary">
					<a href="{{ path('user_products', {'id': user.id}) }}">Liste de vos annonces
					</a>
				</button>
				<button class="btn btn-outline-primary">
					<a href="{{ path('user_edit', {'id': user.id}) }}">Mettre à jour mon compte</a>
				</button>
				<button class="btn btn-outline-primary">
					<a href="{{ path('app_forgot_password_request') }}">Modifier mon mot de passe</a>
				</button>
				{{ include('user/_delete_form.html.twig') }}
			{% else %}
				<div class="button-container">
					<button class="btn btn-outline-primary">
						<a href="{{ path('user_products', {'id': user.id}) }}">Liste des annonces de
							{{user.username}}
						</a>
					</button>
				{% endif %}		
			</div>

			{# Bouton retour en arrière #}			
