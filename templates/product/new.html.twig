{% extends 'base.html.twig' %}

{% block title %}Recyclatroc -
				Nouvelle annonce
{% endblock %}

{% block body %}
	<main class="global-container">
		<div class="card-header">
			<h1 class="breadcrumb">Création d'une nouvelle annonce</h1>
		</div>
		<div class="signin">
			{{ form_start(form) }}
			{{ form_row(form.name) }}
			{{ form_row(form.reference) }}
			{{ form_row(form.picture) }}
			{{ form_row(form.comment) }}
			{{ form_row(form.category) }}
			{{ form_row(form.brand) }}
				{# render each row and field in the embedded form, in this example it's rendering the experience (Location) fields as rows #}
				<div class="col-sm-8 col-sm-offset-2" id="location_list" data-prototype="{{ form_widget(form.location.vars.prototype)|e('html_attr') }}">
						{% for row in form.location %}
							<div class="panel panel-warning">
								<div class="panel-heading">
									<strong>{{ row.vars.value.city}}</strong>
								</div>
								<div class="panel-body">
									{{ form_row(row , {'id':'city', 'attr':{'class':'form-control'} }) }}
								</div>
						</div>
						{% endfor %}
				</div>
   		
		<div
				class="button-container">
			{{ include('product/_form.html.twig') }}
	
			<input type="button"  class="btn btn-outline-dark" value="Page précédente" onclick="history.go(-1)">
</form>
	
					<!-- load JS -->
	<script src="https://cdn.jsdelivr.net/npm/places.js@1.17.1"></script>
	<script src="{{ asset('js/.algo.js') }}"></script>
	<script    src="https://code.jquery.com/jquery-2.2.4.min.js"
             integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="
             crossorigin="anonymous"></script>
	<script src="{{ asset('js/formCollection.js') }}"></script>
</script></main>
		
			</div>
		{% endblock %}
